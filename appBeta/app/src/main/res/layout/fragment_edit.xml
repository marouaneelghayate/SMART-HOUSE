<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:id="@+id/render"
    android:background="@color/darkModePrimary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings"
            android:layout_weight="1"
            android:paddingLeft="19dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/fragment_edit"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:textSize="20sp"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:layout_gravity="center"

            />



    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        />

    <ListView
        android:id="@+id/commandList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/listViewDivider"
        android:dividerHeight="1dp"
        android:background="@color/darkModeSecondary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkModeSecondary"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="@drawable/rounded_gradient"
            android:text="Reset"/>

    </LinearLayout>

</LinearLayout>